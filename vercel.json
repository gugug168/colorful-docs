{
  "version": 2,
  "builds": [
    { 
      "src": "app.js", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["views/**", "data/**", "utils/**"],
        "memory": 1024,
        "maxDuration": 10
      }
    },
    { 
      "src": "api/**/*.js", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["utils/**", "data/**"],
        "memory": 1024,
        "maxDuration": 10
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/images/(.*)", "dest": "/public/images/$1" },
    { "src": "/js/(.*)", "dest": "/public/js/$1" },
    { "src": "/css/(.*)", "dest": "/public/css/$1" },
    { "handle": "filesystem" },
    { "src": "/beautify", "dest": "/app.js" },
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)", "dest": "/app.js" }
  ]
} 