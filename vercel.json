{
  "version": 2,
  "builds": [
    { 
      "src": "app.js", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["views/**", "data/**", "utils/**"],
        "memory": 1024,
        "maxDuration": 10
      }
    },
    { 
      "src": "api/**/*.js", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["utils/**", "data/**"],
        "memory": 1024,
        "maxDuration": 10
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/app.js"
    }
  ]
} 